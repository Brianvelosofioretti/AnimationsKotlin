<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brianvelosofioretti.TapFruit.fragmentVentana2">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="com.example.brianvelosofioretti.animaciones.MainActivity"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:id="@+id/circulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            app:layout_constraintStart_toEndOf="@+id/circulo4"
            app:layout_constraintTop_toTopOf="@+id/circulo3"
            app:srcCompat="@drawable/ic_fruits_apple" />

        <ImageView
            android:id="@+id/circulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/circulo5"
            app:layout_constraintTop_toTopOf="@+id/circulo5"
            app:srcCompat="@drawable/ic_fruits_banana" />

        <ImageView
            android:id="@+id/circulo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/circulo2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/circulo2"
            app:srcCompat="@drawable/ic_fruits_pear" />

        <ImageView
            android:id="@+id/circulo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/circulo"
            app:srcCompat="@drawable/ic_fruits_lemon" />


        <ImageView
            android:id="@+id/circulo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="68dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_fruits_watermelon" />


        <TextView
            android:id="@+id/puntos"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="16dp"
            android:text="Puntuacion"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/circulo4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</FrameLayout>
